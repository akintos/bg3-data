                                                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.8"/>
                                                        <LinearDoubleKeyFrame Value="1" KeyTime="0:0:1.2"/>
                                                        <LinearDoubleKeyFrame Value="0" KeyTime="0:0:1.6"/>
