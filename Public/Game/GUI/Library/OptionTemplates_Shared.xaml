    <ControlTemplate x:Key="OverheadTemplate">
        <Grid Width="1272" Height="716" IsHitTestVisible="False" ClipToBounds="True">
            <ItemsControl ItemsSource="{Binding DataContext.DummyOverhead, RelativeSource={RelativeSource AncestorType={x:Type ls:UIWidget}}}" ItemTemplate="{StaticResource TextTemplate}" ItemsPanel="{StaticResource StackedOverheadsPanel}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,440"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="DialogueTemplate">
        <Grid Width="1272" Height="716" IsHitTestVisible="False" ClipToBounds="True">
            <Grid x:Name="DialogueContainer" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
                <Rectangle x:Name="BackgroundDialogue" Style="{StaticResource BackgroundRectangleStyle}" Margin="-40,-10"/>
                <StackPanel Orientation="Vertical" Width="1272">
                    <TextBlock Style="{StaticResource Dialogue.BodyTextStyle}" x:Name="TextBodyContainer" Margin="0,0,0,20" Visibility="{Binding DataContext.CurrentPlayer.UIOptions.ShowSubtitles, RelativeSource={RelativeSource AncestorType={x:Type ls:UIWidget}}, Converter={StaticResource BoolToVisibleConverter}}">
                                <Span x:Name="speakerName"/>
                                <Span ls:TextBlockFormatter.SourceText="{Binding Source='h630f5604g10b3g4418ga9beg6c6a8679f9a4', Converter={StaticResource TranslatedStringConverter}}"/>
                    </TextBlock>

                    <TextBlock Style="{StaticResource Dialogue.HighlightedAnswerTextStyle}" Margin="8,0,0,0">
                                <Span ls:TextBlockFormatter.SourceText="1."/>
                                <Span ls:TextBlockFormatter.SourceText="{Binding Source='h4b8a0007ga75cg4f86g9e46gfbaf999ced43', Converter={StaticResource TranslatedStringConverter}}"/>
                    </TextBlock>

                    <TextBlock Style="{StaticResource Dialogue.AnswerTextStyle}" Margin="8,0,0,0">
                                <Span ls:TextBlockFormatter.SourceText="2."/>
                                <Span ls:TextBlockFormatter.SourceText="{Binding Source='h7439a0f7gb385g44bbg938age86c8df0605a', Converter={StaticResource TranslatedStringConverter}}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>

        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding DataContext.CurrentPlayer.UIOptions.DisplaySpeaker, RelativeSource={RelativeSource AncestorType={x:Type ls:UIWidget}}}" Value="True">
                <Setter TargetName="speakerName" Property="ls:TextBlockFormatter.SourceText">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource ParameterizedTranslatedStringConverter}">
                            <Binding Source="h8af7b5c3gfbf4g41fegbcd4g84551412784c"/>
                            <Binding Source="hf046d114g7291g4115gb497g86b988ebadac" Converter="{StaticResource TranslatedStringConverter}"/>
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

